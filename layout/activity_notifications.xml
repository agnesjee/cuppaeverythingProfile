<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notifications">

    <TextView
        android:id="@+id/tv_notification_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Settings"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/tv_notification_settings"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="15dp"
        android:background="@drawable/border_background"
        >

        <TextView
            android:id="@+id/tv_push_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push Notifications"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_pn_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive weekly push notifications."
            android:layout_below="@id/tv_push_notifications"
            android:textSize="15sp"
            />

        <Switch
            android:id="@+id/switch_pn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track"
            android:layout_toRightOf="@id/tv_push_notifications"
            android:layout_marginLeft="110dp"
            />

        <View
            android:id="@+id/stroke1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/tv_pn_description"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/stroke1"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_e_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive weekly email notifications."
            android:textSize="15sp"
            android:layout_below="@id/tv_email"
            />

        <Switch
            android:id="@+id/switch_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track"
            android:layout_toRightOf="@id/tv_email"
            android:layout_below="@id/stroke1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="230dp"
            />

        <View
            android:id="@+id/stroke2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/tv_e_description"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/stroke2"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive weekly SMS notifications."
            android:textSize="15sp"
            android:layout_below="@id/tv_sms"
            />

        <Switch
            android:id="@+id/switch_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track"
            android:layout_below="@id/stroke2"
            android:layout_toRightOf="@id/tv_sms"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="240dp"
            />


    </RelativeLayout>

</RelativeLayout>
