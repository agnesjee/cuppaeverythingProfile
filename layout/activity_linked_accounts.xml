<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LinkedAccounts">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social networks"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect your facebook and google to log in quickly."
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:id="@+id/connect_facebook"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="15dp"
        android:background="@drawable/border_background"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_facebook"
            />

        <Button
            android:id="@+id/btn_connect_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to facebook"
            android:textSize="13sp"
            android:layout_toRightOf="@id/facebook"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#F7C873"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masterclass will never post to facebook.com or message your friends without your permission."
            android:layout_toRightOf="@id/facebook"
            android:layout_below="@id/btn_connect_facebook"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/connect_google"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="15dp"
        android:background="@drawable/border_background"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:id="@+id/google"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_google"
            />

        <Button
            android:id="@+id/btn_disconnect_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove connection"
            android:textSize="13sp"
            android:layout_toRightOf="@id/google"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#F44336"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are successfully connected to google, you can easily log in using your google account."
            android:layout_toRightOf="@id/google"
            android:layout_below="@id/btn_disconnect_google"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

</LinearLayout>
