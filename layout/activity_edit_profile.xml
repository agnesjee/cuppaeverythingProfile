<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:id="@+id/header_profile"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="15dp"
        android:background="@drawable/border_background"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_pic"
            />

        <Button
            android:id="@+id/btn_upload_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload new photo"
            android:textSize="13sp"
            android:layout_toRightOf="@id/profile_pic"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#F7C873"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can upload jpg, gif or png image files. Max size of 3 mb."
            android:layout_toRightOf="@id/profile_pic"
            android:layout_below="@id/btn_upload_photo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tv_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIRST NAME"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAST NAME"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/et_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <EditText
            android:id="@+id/et_ep_fname"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Serena"
            android:textColor="#9C9292"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/et_ep_lname"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Lim"
            android:textSize="15sp"
            android:textColor="#9C9292"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL ADDRESS"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/et_ep_email"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:text="serena@gmail.com"
        android:textSize="15sp"
        android:textColor="#9C9292"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:id="@+id/tv_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AREA CODE"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHONE NUMBER"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <EditText
            android:id="@+id/et_ep_areacode"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="+60"
            android:textSize="15sp"
            android:textColor="#9C9292"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/et_ep_phone"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="123456789"
            android:textSize="15sp"
            android:textColor="#9C9292"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADDRESS"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/et_ep_address"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="123, Jalan Bahagia, Tabuan Desa, Subang Jaya"
        android:textSize="15sp"
        android:textColor="#9C9292"
        android:maxLines="1"
        android:inputType="textMultiLine"
        />

    <LinearLayout
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POSTCODE"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATE"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <EditText
            android:id="@+id/et_ep_postcode"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="47500"
            android:textSize="15sp"
            android:textColor="#9C9292"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/et_ep_state"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Selangor"
            android:textSize="15sp"
            android:textColor="#9C9292"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_update_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:backgroundTint="#F7C873"
        />

</LinearLayout>
