<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutCuppaEverything">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/ac_relative_layout1"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            >

        <ImageView
            android:id="@+id/ac_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_transparent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/tv_ac_logo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CuppaEverything"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ac_logo"
            />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.19"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_ac_logo_name"
            />

        <Button
            android:id="@+id/btn_update_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textStyle="bold"
            android:backgroundTint="#F7C873"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_version"
            android:layout_marginTop="5dp"
            />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ac_relative_layout2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/ac_relative_layout1"
        android:layout_margin="15dp"
        android:background="@drawable/border_background"
        >

        <TextView
            android:id="@+id/tv_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/tv_about_us_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CuppaEverything is committed to creating and hand crafting fresh fruit juices and healthy smoothies using only the freshest and most natural ingredients we can lay our hands only. With over 30 flavours to choose from, it is impossible to not fall in love with one of our awesome creations on our menu.\n\nIf not, you can get creative with your own customize drink to come up with your own unique combo. Along the way, we look forward to not only creating unique and delicious concoctions that will kill tickle your tastebuds, but also promoting a healthy lifestyle for the generations to come."
            android:textSize="15sp"
            android:layout_below="@id/tv_about_us"
            android:padding="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ac_relative_layout3"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/ac_relative_layout2"
        android:layout_margin="15dp"
        android:background="@drawable/border_background"
        >

        <TextView
            android:id="@+id/tv_store_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store Location"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_location_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taylor's University\nNo. 1 Jalan Taylor's 47500 Subang Jaya, Selangor Darul Ehsan Malaysia."
            android:textSize="15sp"
            android:layout_below="@id/tv_store_location"
            android:padding="20dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/taylors_map"
            android:layout_below="@id/tv_location_description"
            />

        <Space
            android:layout_width="1dp"
            android:layout_height="30dp"
            />

    </RelativeLayout>

    </RelativeLayout>

</ScrollView>
