<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUs">

    <RelativeLayout
        android:id="@+id/cu_relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/curve_upper_background"
        >

        <TextView
            android:id="@+id/tv_contactus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have any questions?"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/tv_contactus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We'd love to hear from you."
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_contactus1"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/contact_support"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_contactus2"
            android:layout_marginTop="30dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cu_relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/cu_relativelayout1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_background"
        >

        <TextView
            android:id="@+id/tv_cu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/et_cu_name"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:hint="Please enter your name"
            android:inputType="textPersonName"
            android:layout_below="@id/tv_cu_name"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/tv_cu_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/et_cu_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/et_cu_email"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:hint="Please enter your email"
            android:inputType="textEmailAddress"
            android:layout_below="@id/tv_cu_email"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/tv_cu_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/et_cu_email"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/et_cu_message"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:hint="Please enter your message"
            android:inputType="text"
            android:layout_below="@id/tv_cu_message"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_cu_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#F7C873"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cu_relativelayout2"
        android:layout_marginTop="15dp"
        />

</RelativeLayout>
