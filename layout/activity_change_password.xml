<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangePassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It is not a bad idea to change your password often for a more secure account.\nWe recommend that you set a strong password that is at least 8 characters long and includes a mix of letters, numbers and symbols."
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:id="@+id/password_field"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="15dp"
        android:background="@drawable/border_background"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

    <TextView
        android:id="@+id/tv_current_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CURRENT PASSWORD"
        android:textStyle="bold"
        android:textColor="#9C9292"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/et_current_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Type your current password"
        android:layout_marginLeft="10dp"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_current_password"
        />

    <TextView
        android:id="@+id/tv_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW PASSWORD"
        android:textStyle="bold"
        android:textColor="#9C9292"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/et_current_password"
        />

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Type your new password"
        android:layout_marginLeft="10dp"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_new_password"
        />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change my password"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#F7C873"
        />

</LinearLayout>
